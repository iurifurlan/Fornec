@model IEnumerable<Fornec.Models.Fornecedor>
 

@{
    ViewData["Title"] = "Lista Dos Fornecedores";
}

<style>

    ..main-container {
        background: linear-gradient(135deg, #004080, #007FFF); /* Gradiente do azul escuro ao claro */
        min-height: 100vh; /* Garante que o fundo cubra toda a altura */
        padding: 20px; /* Adiciona espaçamento interno */
        color: white; /* Define o texto como branco */
    }

     .h1, .h2 {
         text-decoration-color: black;
     }  
       

    .display-4 {
        font-size: 2.5rem;
        font-weight: bold;
        color: black; /* Título em branco */
    }

    .lead {
        font-size: 1.25rem;
        color: black; /* Texto em branco */
        line-height: 1.6; /* Melhora o espaçamento entre linhas */
    }

    .img-fluid {
        max-height: 250px; /* Define altura máxima */
        object-fit: cover; /* Ajusta a imagem para cobrir o espaço sem deformação */
        width: 100%; /* Garante que a largura se ajuste ao contêiner */
    }

    .row.text-center img {
        margin: 0 auto; /* Centraliza a imagem */
    }

    .card {
        border-radius: 10px; /* Bordas arredondadas */
        transition: transform 0.3s, box-shadow 0.3s;
    }

        .card:hover {
            transform: scale(1.05); /* Efeito de "zoom" ao passar o mouse */
            box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2); /* Sombra mais evidente */
        }

    .card-body {
        background-color: #f8f9fa; /* Fundo claro */
        color: #343a40; /* Texto escuro */
    }

    .card-footer {
        background-color: #ffffff; /* Fundo branco */
        border-top: 1px solid #dee2e6; /* Linha separadora */
    }

    .btn {
        border-radius: 5px; /* Bordas arredondadas nos botões */
    }

    .btn-success {
        background-color: #28a745; /* Verde padrão */
        border: none;
    }

        .btn-success:hover {
            background-color: #218838; /* Verde escuro no hover */
        }

    .container {
        max-width: 1200px;
        margin: 0 auto; /* Centraliza o conteúdo */
    }

</style>

<div class="main-container mt-4">
    <!-- Título Principal -->
    <div class="text-center mb-4">
        <h1 class="display-4">Fornec. Sua Solução em Fornecedores</h1>
        <p class="lead">
            Aqui você encontra todas as funções para ter um controle melhor sobre seus fornecedores,
            desde uma simples consulta, cadastro, alteração e exclusão. <br>
            Em um ambiente prático e rápido, tenha os seus fornecedores a um clique.
        </p>
    </div>

    <!-- Imagens -->
    <div class="row text-center mb-5">
        <div class="col-md-4">
            <img src="/Imagem/fornec1.jpg" class="img-fluid rounded shadow-sm" alt="Fornec 1">
        </div>
        <div class="col-md-4">
            <img src="/Imagem/fornec2.jpg" class="img-fluid rounded shadow-sm" alt="Fornec 2">
        </div>
        <div class="col-md-4">
            <img src="/Imagem/fornec3.jpg" class="img-fluid rounded shadow-sm" alt="Fornec 3">
        </div>
    </div>

    <!-- Título e Botão -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="text-center flex-grow-1">Relação de Fornecedores</h2>
        <a class="btn btn-success ml-3" asp-action="Create">Novo Fornecedor</a>
    </div>

    <!-- Cards dos Fornecedores -->
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-lg-4 col-md-6 col-sm-12 mb-4">
                <div class="card shadow-sm border-0 h-100">
                    <div class="card-body">
                        <h4 class="card-title">@item.NomeFantasia</h4>
                        <h5 class="card-subtitle mb-2 text-muted">@item.Nome</h5>
                        <p class="card-text">Email: @item.Email</p>
                    </div>
                    <div class="card-footer d-flex justify-content-between">
                        <a class="btn btn-outline-primary btn-sm" asp-action="Edit" asp-route-id="@item.Id">Editar</a>
                        <a class="btn btn-outline-info btn-sm" asp-action="Details" asp-route-id="@item.Id">Detalhes</a>
                        <a class="btn btn-danger text-white btn-sm" asp-action="Delete" asp-route-id="@item.Id">Apagar</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>